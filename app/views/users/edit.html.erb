<h1>Editing User #<%= @user.id %></h1>

<%= form_tag(user_url(@user), method: 'patch') do %>
  <div>
    <%= label_tag :first_name %><br />
    <%= text_field_tag :first_name, @user.name %>
  </div>

  <div>
    <%= label_tag :last_name %><br />
    <%= text_field_tag :last_name, @user.name %>
  </div>

  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, @user.email %>
  </div>

  <div>
    <%= label_tag :password %><br />
    <%= password_field_tag :password, @user.password %>
  </div>

  <div>
    <%= label_tag :password_confirmation %><br />
    <%= password_field_tag :password_confirmation, @user.password_confirmation %>
  </div>

  <div>
    <%= label_tag :phone %><br />
    <%= text_field_tag :phone, @user.phone %>
  </div>

  <div>
    <%= label_tag :address %><br />
    <%= text_field_tag :address, @user.address %>
  </div>

  <div>
    <%= label_tag :city %><br />
    <%= text_field_tag :city, @user.city %>
  </div>

  <div>
    <%= label_tag :state %><br />
    <%= text_field_tag :state, @user.state %>
  </div>

  <div>
    <%= label_tag :zip %><br />
    <%= number_field_tag :zip, @user.zip %>
  </div>

  <div>
    <%= label_tag :roast %><br />
    <%= text_field_tag :roast, @user.roast %>
  </div>

   <div>
    <%= label_tag :make_coffee %><br />
    <%= text_field_tag :make_coffee, @user.make_coffee %>
  </div>

   <div>
    <%= label_tag :drink_coffee %><br />
    <%= text_field_tag :drink_coffee, @user.drink_coffee %>
  </div>

  <div>
    <%= submit_tag "Update User" %>
  </div>
<% end %>
